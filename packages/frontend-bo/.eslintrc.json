{
    "root": true,
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "@nuxt/eslint-config",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "prettier/prettier": [
            "error"
        ],
        "vue/multi-word-component-names": "warn"
    },
    "ignorePatterns": [
        "src/public"
    ]
}